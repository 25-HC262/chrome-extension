{
    "manifest_version": 3,
    "name": "Sign translater",
    "version": "1.0.0",
    "description": "Sign translater for sign language user",
    "host_permissions": ["https://meet.google.com/*"],
    "content_scripts": [
        {
            "matches": ["https://meet.google.com/*"],
            "js": ["./src/caption.js"],
            "css": ["./src/caption.css"],
            "run_at" : "document_idle"
        }
    ],
    "permissions": [
        "activeTab",
        "scripting"
    ]
}