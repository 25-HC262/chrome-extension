{
    "manifest_version": 3,
    "name": "Sori Bridge",
    "version": "1.0.0",
    "description": "Sign translater for sign language user",
    "host_permissions": ["https://meet.google.com/*"],
    "background" : {
        "service_worker": "./src/controllers/ttsController.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://meet.google.com/*"],
            "js": [
                "dist/content.js"
            ],
            "css": [
                "./src/public/index.css"
            ],
            "run_at" : "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/public/index.html",
                "src/public/index.css"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "permissions": [
        "activeTab",
        "desktopCapture",
        "storage",
        "tts",
        "alarms"
    ]
}